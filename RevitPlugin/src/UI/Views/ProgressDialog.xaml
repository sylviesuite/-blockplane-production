<Window x:Class="BlockPlane.RevitPlugin.UI.Views.ProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Processing"
        Height="220" Width="500"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">
    
    <Border Background="White" CornerRadius="12" BorderBrush="#E5E7EB" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="#000000" Opacity="0.15" BlurRadius="20" ShadowDepth="0"/>
        </Border.Effect>
        
        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock x:Name="TitleText" Grid.Row="0" 
                       Text="Processing..." 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="#111827"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,16"/>

            <!-- Progress Bar -->
            <ProgressBar x:Name="ProgressBar" Grid.Row="1" 
                         Height="8" 
                         Minimum="0" 
                         Maximum="100" 
                         Value="0"
                         Margin="0,0,0,16">
                <ProgressBar.Style>
                    <Style TargetType="ProgressBar">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ProgressBar">
                                    <Grid>
                                        <Border Background="#E5E7EB" CornerRadius="4"/>
                                        <Border x:Name="PART_Track" CornerRadius="4">
                                            <Border x:Name="PART_Indicator" 
                                                    Background="#2563EB" 
                                                    CornerRadius="4"
                                                    HorizontalAlignment="Left"/>
                                        </Border>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ProgressBar.Style>
            </ProgressBar>

            <!-- Status Text -->
            <TextBlock x:Name="StatusText" Grid.Row="2" 
                       Text="Please wait..." 
                       FontSize="14" 
                       Foreground="#6B7280"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Margin="0,0,0,12"/>

            <!-- Percentage -->
            <TextBlock x:Name="PercentageText" Grid.Row="3" 
                       Text="0%" 
                       FontSize="16" 
                       FontWeight="SemiBold"
                       Foreground="#2563EB"
                       HorizontalAlignment="Center"/>
        </Grid>
    </Border>
</Window>
