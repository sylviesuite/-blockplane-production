<Window x:Class="BlockPlane.RevitPlugin.UI.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="BlockPlane Settings"
        Height="600" Width="700"
        MinHeight="500" MinWidth="600"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    
    <Window.Resources>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="24,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1D4ED8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#6B7280"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4B5563"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <Style x:Key="InputTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" Padding="24,20" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1">
            <StackPanel>
                <TextBlock Text="BlockPlane Settings" FontSize="24" FontWeight="Bold" Foreground="#111827"/>
                <TextBlock Text="Configure plugin preferences and connection settings" FontSize="14" Foreground="#6B7280" Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="24,20">
                
                <!-- API Settings -->
                <TextBlock Text="API Settings" Style="{StaticResource SectionHeader}"/>
                <Border Background="White" Padding="20" CornerRadius="8" Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="API Base URL" Style="{StaticResource LabelText}"/>
                        <TextBox x:Name="ApiUrlTextBox" Style="{StaticResource InputTextBox}" Margin="0,0,0,16"/>

                        <TextBlock Text="API Timeout (seconds)" Style="{StaticResource LabelText}"/>
                        <TextBox x:Name="ApiTimeoutTextBox" Style="{StaticResource InputTextBox}" Margin="0,0,0,16"/>

                        <Button Content="Test Connection" Style="{StaticResource SecondaryButton}" 
                                Click="TestConnectionButton_Click" HorizontalAlignment="Left" Padding="20,8"/>
                    </StackPanel>
                </Border>

                <!-- Cache Settings -->
                <TextBlock Text="Cache Settings" Style="{StaticResource SectionHeader}"/>
                <Border Background="White" Padding="20" CornerRadius="8" Margin="0,0,0,24">
                    <StackPanel>
                        <CheckBox x:Name="EnableCacheCheckBox" Content="Enable local caching" 
                                  FontSize="14" Margin="0,0,0,16"/>

                        <TextBlock Text="Cache Duration (hours)" Style="{StaticResource LabelText}"/>
                        <TextBox x:Name="CacheDurationTextBox" Style="{StaticResource InputTextBox}" Margin="0,0,0,16"/>

                        <Button Content="Clear Cache" Style="{StaticResource SecondaryButton}" 
                                Click="ClearCacheButton_Click" HorizontalAlignment="Left" Padding="20,8"/>
                    </StackPanel>
                </Border>

                <!-- Default Preferences -->
                <TextBlock Text="Default Preferences" Style="{StaticResource SectionHeader}"/>
                <Border Background="White" Padding="20" CornerRadius="8" Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="Default Region" Style="{StaticResource LabelText}"/>
                        <ComboBox x:Name="DefaultRegionComboBox" Height="36" Margin="0,0,0,16"/>

                        <CheckBox x:Name="AutoCalculateCarbonCheckBox" 
                                  Content="Automatically calculate carbon footprint on project open" 
                                  FontSize="14" Margin="0,0,0,12"/>

                        <CheckBox x:Name="ShowRecommendationsCheckBox" 
                                  Content="Show material recommendations automatically" 
                                  FontSize="14" Margin="0,0,0,12"/>

                        <CheckBox x:Name="ConfirmSwapsCheckBox" 
                                  Content="Always confirm before swapping materials" 
                                  FontSize="14" IsChecked="True"/>
                    </StackPanel>
                </Border>

                <!-- About -->
                <TextBlock Text="About" Style="{StaticResource SectionHeader}"/>
                <Border Background="White" Padding="20" CornerRadius="8" Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock FontSize="14" Foreground="#374151">
                            <Run Text="BlockPlane Revit Plugin" FontWeight="Bold"/>
                            <LineBreak/>
                            <Run Text="Version 1.0.0"/>
                            <LineBreak/><LineBreak/>
                            <Run Text="Sustainable building materials integration for Autodesk Revit."/>
                            <LineBreak/><LineBreak/>
                            <Run Text="Â© 2024 BlockPlane. All rights reserved."/>
                        </TextBlock>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="White" Padding="24,16" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Reset to Defaults" Style="{StaticResource SecondaryButton}" 
                        Click="ResetButton_Click" Padding="20,10"/>
                <Button Content="Save" Style="{StaticResource PrimaryButton}" 
                        Click="SaveButton_Click" Margin="12,0,0,0" Padding="32,10"/>
                <Button Content="Cancel" Style="{StaticResource SecondaryButton}" 
                        Click="CancelButton_Click" Margin="12,0,0,0" Padding="20,10"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
